<?xml version="1.0" encoding="utf-8"?>
<!-- (1) WRONG ROOT ELEMENT-->
<Hotel
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://your-username.github.io/Hotels.xsd">

  <!--- Faulty Hotel #1 -->
  <!-- (2) MISSING required Rating attribute -->
  <!-- (3) NO <Phone> element -->
  <Hotel>
    <Name>Bad Hotel One</Name>
    <Address>
      <Number>1</Number>
      <Street>Error Ln</Street>
      <City>Tempe</City>
      <State>AZ</State>
      <Zip>00000</Zip>
    </Address>
  </Hotel>

  <!--- Faulty Hotel #2 -->
  <!-- (4) <Address> tag never closes -->
  <Hotel Rating="3.5">
    <Name>Bad Hotel Two</Name>
    <Phone>000-000-0000</Phone>
    <Address>
      <Number>2</Number>
      <Street>Broken St</Street>
      <City>Phoenix</City>
      <State>AZ</State>
      <Zip>11111</Zip>
    </Address>
  </Hotel>

  <!--- Faulty Hotel #3 -->
  <!-- (5) Two <Name> elements in one hotel -->
  <Hotel Rating="3.9">
    <Name>Bad Hotel Three</Name>
    <Name>Duplicate Name</Name>
    <Phone>111-111-1111</Phone>
    <Address>
      <Number>3</Number>
      <Street>Duplicate Dr</Street>
      <City>Scottsdale</City>
      <State>AZ</State>
      <Zip>22222</Zip>
    </Address>
  </Hotel>

</Hotel>
